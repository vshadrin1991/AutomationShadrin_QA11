<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Welcome to the-internet" parallel="tests">
    <parameter name="browser" value="CHROME"/>
    <parameter name="url" value="http://the-internet.herokuapp.com/"/>
    
    <test name="Context Menu">
        <classes>
            <class name="Lecture_12.HomePage_Test"/>
            <class name="Lecture_12.ContextMenu_Test"/>
        </classes>
    </test>

    <test name="Dynamic Controls">
        <classes>
            <class name="Lecture_12.HomePage_Test"/>
            <class name="Lecture_12.DynamicControls_Test"/>
        </classes>
    </test>

    <test name="File Uploader" enabled="false">
        <classes>
            <class name="Lecture_12.HomePage_Test"/>
            <class name="Lecture_12.FileUploader_Test"/>
        </classes>
    </test>

    <test name="Frames">
        <classes>
            <class name="Lecture_12.HomePage_Test"/>
             <class name="Lecture_12.Frames_Test"/>
        </classes>
    </test>
</suite>